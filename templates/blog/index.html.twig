{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

  <section class="articles">
    <!-- Pour chaque article dans articles, on afficher ceci -->
    {% for article in articles %}

      <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">écrit le {{ article.createdAt | date('d/m/y')}} à {{ article.createdAt | date('H:i')}} dans la catégorie formation</div>
        <div class="content">
          <img src="{{ article.image }}" alt="">
          {{ article.content | raw }} <!--raw permet de rendre le contenu brut-->
          <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
        </div>
      </article>

    {% endfor %}
  </section>

{% endblock %}
